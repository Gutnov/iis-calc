<div class="calculate__list-item-wr" style="display:none">
    <li class="calculate__list-item" onclick="o2.dropDownClick('#id#', this)" data-item-id="#item-id#">
        <div class="calculate__list-plus">+</div>
        <div class="calculate__list-before">до</div>
        <div class="calculate__list-percent">#percent#%</div>
        <div class="calculate__list-text">#label#</div>
        <div class="calculate__list-mobile">Оптимальное соотношение<br> риска и доходности</div>
    </li>
</div>
<section class="calculate">
    <div class="calculator">
        <div class="container">
            <div class="calculate__icon"><img src="img/square-percent.svg" alt=""></div>
            <h2 class="calculate__title">Посчитайте доходность ваших вложений</h2>
            <div class="calculate__inner">
                <div class="calculate__left">
                    <h3 class="calculate__left-title">Вы готовы инвестировать</h3>
                    <div class="calculate__left-wrap">
                        <div class="calculate__input">
                            <input type="tel" class="month-input" value="4167">
                            <div class="placeholder">рублей в месяц</div>
                        </div>
                        <span>или</span>
                        <div class="calculate__input">
                            <input type="tel" class="year-input" value="50000">
                            <div class="placeholder">рублей в год</div>
                        </div>
                    </div>
                    <div id="html5" class="calculate__slider"></div>
                </div>
                <div class="calculate__devider"></div>
                <div class="calculate__right">
                    
                    <h3 class="calculate__right-title">Рассчитываете на доходность</h3>
                    <div class="calculate__list-wrap" >
                        <div class="calculate__list-icon"><img src="img/percent_line.svg" alt=""></div>
                        <div class="calculate__list-down" onclick="o2.openDropDown(this)">
                            <div class="calculate__list-plus">+</div>
                            <div class="calculate__list-before">до</div>
                            <div class="calculate__list-percent show-percent">36%</div>
